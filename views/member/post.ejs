<div class="container-contact100" style="font-family: 'Lobster', cursive;">
    <div class="wrap-contact100">
        <form class="contact100-form validate-form" method="post" action="<%= locals.post ? '/editpost/' + post._id : '/post' %>" enctype="multipart/form-data">
				<span class="contact100-form-title" style="font-family: 'Lobster', cursive;">
                    <%= locals.post ? 'Sửa Bài Đăng' : 'Đăng Bài' %>
				</span>
            <% if (locals.message) { %>
                <% message.forEach(mess => { %>
                    <div class="alert alert-<%= mess.type ? mess.type : 'warning' %>">
                        <%= mess.msg %>
                    </div>
                <%  }); %>
            <% } %>
            <div class="wrap-input100 validate-input" data-validate = "Message is required">
                <span class="label-input100" style="font-family: 'Quicksand', sans-serif;">Nội dung</span>
                <textarea style="font-family: 'Lobster', cursive;" class="input100" name="content" placeholder="Nội dung ở đây..."><% if (locals.post) { %><%= post.content %><% }%></textarea>
                <span class="focus-input100"></span>
            </div>

            <div class="custom-file mb-3">
                <input type="file" accept="image/*" class="custom-file-input" id="customFile" name="image" multiple>
                <label class="custom-file-label" for="customFile">Chọn hình ảnh</label>
            </div>

            <div class="custom-control custom-checkbox mb-3">
                <input type="checkbox" class="custom-control-input" id="customCheck" name="check">
                <label class="custom-control-label" for="customCheck">Bạn có đồng ý với điều khoản của Confession?</label>
            </div>

            <div class="container-contact100-form-btn">
                <div class="wrap-contact100-form-btn">
                    <div class="contact100-form-bgbtn"></div>
                    <button class="contact100-form-btn" type="submit">
							<span>
								<%= locals.post ? 'Sửa Bài' : 'Gửi' %>
								<i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
							</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>