<div class="limiter" style="font-family: 'Lobster', cursive;">
    <div class="container-table100">
        <div class="wrap-table100">
            <div class="table100">
                <h1 style="text-align: center; font-size: 60px; font-family: 'Lobster', cursive;" >Bài đã đăng</h1>
                <br>
                <table>
                    <thead>
                    <tr class="table100-head">
                        <th class="column1" style="font-family: 'Lobster', cursive;">STT</th>
                        <th class="column2" style="font-family: 'Lobster', cursive;">Nội dung</th>
                        <th class="column3" style="font-family: 'Lobster', cursive;">Hình ảnh</th>
                        <th class="column4" style="font-family: 'Lobster', cursive;">Trạng thái</th>
                        <th class="column5" style="font-family: 'Lobster', cursive;">Ghi chú</th>
                        <th class="column6" style="font-family: 'Lobster', cursive;">Thao tác</th>
                    </tr>
                    </thead>
                    <tbody>
                    <%
                        if (locals.posts) {
                            var i = (current == 1) ? 1 : (current - 1) * 10 + 1;
                            posts.forEach(post => {
                    %>
                        <tr>
                            <td class="column1"><%= i %></td>
                            <td class="column2"><%= post.content.length > 20 ? post.content.substring(0, 20) + '...' : post.content %></td>
                            <td class="column3"><%= post.image.length %></td>
                            <td class="column4"><%- statusList[post.status] %></td>
                            <td class="column5">&emsp;<%= post.note %></td>
                            <td class="column6">
                                <a href="/editpost/<%= post._id %>">
                                    <button class="btn-1 btn-1-warning"><i class="fa fa-edit"></i></button>
                                </a>
                                <% if (post.status == 0) { %>
                                <a href="/deletepost/<%= post._id %>">
                                    <button
                                        onclick="return confirm('Bạn có muốn xóa bài đăng này chứ ?')"
                                        class="btn-1 btn-1-danger">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </a>
                                <% } else { %>
                                    <button
                                        onclick="return confirm('Bạn không thể xóa bài đăng này được !')"
                                        class="btn-1 btn-1-danger">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                <% } %>
                            </td>
                        </tr>
                    <%   i++;});
                    } %>
                    </tbody>
                </table>

                <br/>
                <% if (locals.pages && pages > 0) { %>
                    <ul class="pagination" style="justify-content: center;">
                        <% if (current == 1) { %>
                            <li class="page-item disabled"><a class="page-link">Trang Đầu</a></li>
                        <% } else { %>
                            <li class="page-item"><a class="page-link" href="/posts/1">Trang Đầu</a></li>
                        <% } %>
                        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                        <% if (i !== 1) { %>
                            <li class="page-item disabled"><a class="page-link">...</a></li>
                        <% } %>
                        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                            <% if (i == current) { %>
                                <li class="page-item active"><a class="page-link"><%= i %></a></li>
                            <% } else { %>
                                <li class="page-item "><a class="page-link"href="/posts/<%= i %>"><%= i %></a></li>
                            <% } %>
                            <% if (i == Number(current) + 4 && i < pages) { %>
                                <li class="page-item disabled"><a class="page-link">...</a></li>
                            <% } %>
                        <% } %>
                        <% if (current == pages) { %>
                            <li class="page-item disabled"><a class="page-link">Trang Cuối</a></li>
                        <% } else { %>
                            <li class="page-item"><a class="page-link" href="/posts/<%= pages %>">Trang Cuối</a></li>
                        <% } %>
                    </ul>
                <% } %>


            </div>
        </div>
    </div>
</div>
