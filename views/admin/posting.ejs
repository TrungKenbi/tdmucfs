<div class="container">
    <div class="row">
        <div class="col">
            <div class="shadow-lg d-block shadow text-center" style="width: 100%;min-height: 630px;margin-top: 119px;background-color: rgba(255,255,255,0.79);">
                <form style="padding-top: 70px;" method="post" action="/post" enctype="multipart/form-data">
                    <div class="form-group">
                        <h1 class="text-center" style="color: rgb(1,1,1);font-weight: bold;">Đăng bài</h1>
                    </div>
                    <% if (locals.message) { %>
                        <% message.forEach(mess => { %>
                            <div class="alert alert-info">
                                <%= mess.msg %>
                            </div>
                        <%  }); %>
                    <% } %>
                    <input placeholder="Tiêu đề ở đây" style="width: 50%; margin: 10px;">
                    <div class="form-group"><textarea class="form-control form-control-lg" name="content" id="content" style="width: 50%;margin-left: 25%;min-height: 200px;"><%
                            if (locals.posts) {
                                var i = 1;
                                posts.forEach   (post => {
                            %>◣<%= i %>◢
<%= post.content %>

<% i++;});
                                } %>
                        </textarea></div>
                    <div class="form-group">Image ở đây</div>
                    <div class="form-group"><textarea class="form-control form-control-lg" placeholder="Admin comment here!" name="content" id="content" style="width: 50%;margin-left: 25%;min-height: 100px;"></textarea></div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg" type="submit" style="width: 20%;">Post</button>
                        <a href="/admin/listPost" class="btn btn-dark btn-lg" style="width: 20%;">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>