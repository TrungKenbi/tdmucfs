<div class="container">
    <div class="row">
        <div class="col">
            <div class="shadow-lg d-block shadow text-center"
                 style="width: 100%;min-height: 630px;margin-top: 119px;background-color: rgba(255,255,255,0.79);">
                <h1>Quản Lý Thành Viên</h1>
                <table class="table">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Tên người dùng</th>
                        <th scope="col">Số bài đăng</th>
                        <th scope="col">Số điểm</th>
<!--                        <th scope="col">Thao tác</th>-->
                    </tr>
                    </thead>
                    <tbody>
                    <%
                        var i = (current == 1) ? 1 : (current - 1) * 10 + 1;
                        users.forEach(userr => {
                    %>
                        <tr>
                            <td scope="col"><%= i %></td>
                            <td scope="col">
                                <a href="/admin/manageUser/view/<%= userr._id %>"><%= userr.name %></a>
                            </td>
                            <td scope="col"><%= userr.countPost %></td>
                            <td scope="col"><%= userr.point %></td>
<!--                            <td scope="col">-->
<!--                                <a href="/admin/manageUser/edit/<%= userr._id %>"-->
<!--                                   title="Sửa thông tin">-->
<!--                                    <button class="btn btn-warning"><i class="fa fa-edit"></i></button>-->
<!--                                </a>-->
<!--&lt;!&ndash;                                <a href="/admin/manageUser/ban/<%= userr._id %>"&ndash;&gt;-->
<!--&lt;!&ndash;                                   onclick="return confirm('Bạn có cấm người dùng này không ?')"&ndash;&gt;-->
<!--&lt;!&ndash;                                    title="Cấm người dùng">&ndash;&gt;-->
<!--&lt;!&ndash;                                    <button class="btn btn-danger"><i class="fa fa-ban"></i></button>&ndash;&gt;-->
<!--&lt;!&ndash;                                </a>&ndash;&gt;-->
<!--                            </td>-->
                        </tr>
                    <% i++ }) %>
                    </tbody>
                </table>

                <% if (locals.pages && pages > 2) { %>
                    <ul class="pagination" style="justify-content: center;">
                        <% if (current == 1) { %>
                            <li class="page-item disabled"><a class="page-link">Trang Đầu</a></li>
                        <% } else { %>
                            <li class="page-item"><a class="page-link" href="/admin/manageUser/1">Trang Đầu</a></li>
                        <% } %>
                        <% var i = (Number(current) > 2 ? Number(current) - 1 : 1) %>
                        <% if (i !== 1) { %>
                            <li class="page-item disabled"><a class="page-link">...</a></li>
                        <% } %>
                        <% for (; i <= (Number(current) + 1) && i <= pages; i++) { %>
                            <% if (i == current) { %>
                                <li class="page-item active"><a class="page-link"><%= i %></a></li>
                            <% } else { %>
                                <li class="page-item "><a class="page-link" href="/admin/manageUser/<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                            <% if (i == Number(current) + 1 && i < pages) { %>
                                <li class="page-item disabled"><a class="page-link">...</a></li>
                            <% } %>
                        <% } %>
                        <% if (current == pages) { %>
                            <li class="page-item disabled"><a class="page-link">Trang Cuối</a></li>
                        <% } else { %>
                            <li class="page-item"><a class="page-link" href="/admin/manageUser/<%= pages %>">Trang
                                    Cuối</a></li>
                        <% } %>
                    </ul>
                <% } %>
            </div>
        </div>
    </div>
</div>